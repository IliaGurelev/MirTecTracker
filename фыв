<template>
  <div class="delete-workers">
    <ul>
      <li v-for="worker in workerList" :key="worker.id">
        <span>{{ worker.nameUser }}</span>
        <button @click="removeWorker(worker)">Удалить</button>
      </li>
    </ul>
  </div>
</template>

<script setup>
import { defineProps, defineEmits } from 'vue';

const props = defineProps({
  workerList: {
    type: Array,
    required: true,
  },
});

const emit = defineEmits(['worker-removed']);

const removeWorker = (worker) => {
  emit('worker-removed', worker);
};
</script>

<style scoped>
.delete-workers {
  margin-top: 10px;
}

.delete-workers ul {
  list-style-type: none;
  padding: 0;
}

.delete-workers li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 0;
}

.delete-workers button {
  padding: 0.3rem 0.5rem;
  background-color: #f44336;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.delete-workers button:hover {
  background-color: #d32f2f;
}

.delete-workers span {
  margin-right: 10px;
}
</style>
